<UserControl x:Class="Golf.Client.GameObjects.GolfBall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Canvas.Left="{Binding Path=X}"
             Canvas.Top="{Binding Path=Y}">
  <Ellipse HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="10" Height="10"
           RenderTransformOrigin="0.5,0.5">
    <Ellipse.Fill>
      <RadialGradientBrush>
        <RadialGradientBrush.RelativeTransform>
          <TransformGroup>
            <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleY="1.245" ScaleX="0.92" />
            <SkewTransform CenterY="0.5" CenterX="0.5" />
            <RotateTransform CenterY="0.5" CenterX="0.5" />
            <TranslateTransform X="0.289" Y="-0.092" />
          </TransformGroup>
        </RadialGradientBrush.RelativeTransform>
        <GradientStop Color="Black" Offset="1" />
        <GradientStop Color="White" />
      </RadialGradientBrush>
    </Ellipse.Fill>
  </Ellipse>
</UserControl>